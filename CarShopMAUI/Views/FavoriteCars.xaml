<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarShopMAUI.Views.FavoriteCars"
             Title="FavoriteCars">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions> 
        
        <Label Grid.Column="0" Grid.Row="0" BackgroundColor="Blue" Text="1"/>
        <Label Grid.Column="0" Grid.Row="1" BackgroundColor="Red" Text="1"/>
        <Label Grid.Column="0" Grid.Row="2" BackgroundColor="Black" Text="1"/>
        
        <Label Grid.Column="1" Grid.Row="0" BackgroundColor="Pink" Text="1"/>
        <Label Grid.Column="1" Grid.Row="1" BackgroundColor="Green" Text="1"/>
        <Label Grid.Column="1" Grid.Row="2" BackgroundColor="Yellow" Text="1"/>

        <Button Grid.Row="0" Grid.Column="1" Text="Button" HorizontalOptions="Center" VerticalOptions="Center"/>

        <Image Grid.Row="2" Grid.Column="1" Source="dotnet_bot"/>
    </Grid>
</ContentPage>